{
  "name": "Reaction",
  "version": "1.0.0",
  "main": "index.js",
  "author": "khirayama <https://github.com/khirayama>",
  "license": "MIT",
  "scripts": {
    "start": "npm run development",
    "development": "npm run watch:server & npm run watch:client",
    "build:server": "NODE_PATH=./ NODE_ENV=development node server/index.js",
    "watch:server": "NODE_PATH=./ NODE_ENV=development nodemon --ignore client --ignore public server/index.js",
    "build:client": "NODE_PATH=./ gulp build",
    "watch:client": "NODE_PATH=./ gulp watch",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:fix": "npm run lint:scripts:fix && npm run lint:styles && npm run lint:styles:sort:fix",
    "lint:scripts": "NODE_PATH=./ eslint --ignore-path .gitignore server client universal",
    "lint:scripts:fix": "NODE_PATH=./ eslint --ignore-path .gitignore --fix server client universal",
    "lint:styles": "stylelint --config .stylelintrc client/**/*.css",
    "lint:styles:sort:fix": "postcss --use postcss-sorting -r client/**/*.css"
  },
  "dependencies": {
    "autoprefixer": "^6.5.3",
    "body-parser": "^1.15.2",
    "browserify": "^13.1.1",
    "classnames": "^2.2.5",
    "cookie-parser": "^1.4.3",
    "cookie-session": "^2.0.0-alpha.2",
    "cssnano": "^3.8.1",
    "eslint": "^3.11.1",
    "eslint-config-xo-react": "^0.10.0",
    "eslint-config-xo-space": "^0.15.0",
    "eslint-plugin-jsx-a11y": "^3.0.1",
    "eslint-plugin-react": "^6.8.0",
    "express": "^4.14.0",
    "express-useragent": "^1.0.4",
    "gulp": "^3.9.1",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.2.0",
    "jsx-transform": "^2.3.0",
    "nodemon": "^1.11.0",
    "passport": "^0.3.2",
    "passport-twitter": "^1.0.4",
    "postcss-cli": "^2.6.0",
    "postcss-easy-import": "^1.0.1",
    "postcss-nested": "^1.0.0",
    "postcss-simple-vars": "^3.0.0",
    "postcss-sorting": "^1.7.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "stylelint": "^7.6.0",
    "stylelint-config-standard": "^15.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.7.0"
  }
}
