{
  "name": "Reaction",
  "version": "1.0.0",
  "main": "index.js",
  "author": "khirayama <https://github.com/khirayama>",
  "license": "MIT",
  "engines": {
    "node": ">=7.2"
  },
  "scripts": {
    "start": "npm run development",
    "clean": "rm -rf tmp dist",
    "server": "NODE_PATH=dist node dist/index.js",
    "server:watch": "NODE_PATH=dist nodemon dist/index.js --ignore src --ignore tmp --ignore dist/public",
    "compile:scripts": "babel src --out-dir tmp",
    "compile:scripts:watch": "babel src --out-dir tmp -w",
    "copy:files": "gulp copy:files",
    "copy:files:watch": "gulp copy:files:watch",
    "bundle:scripts": "NODE_PATH=tmp browserify tmp/client/index.js -o dist/public/bundle.js",
    "bundle:scripts:watch": "NODE_PATH=tmp watchify tmp/client/index.js -o dist/public/bundle.js -v",
    "build:scripts": "npm run compile:scripts && npm run copy:files && npm run bundle:scripts",
    "watch:scripts": "npm run build:scripts && (npm run compile:scripts:watch & npm run copy:files:watch & npm run bundle:scripts:watch)",
    "build:styles": "gulp build:styles",
    "watch:styles": "gulp watch:styles",
    "build": "npm run clean && npm run build:scripts && npm run build:styles",
    "watch": "npm run clean && (npm run watch:scripts & npm run watch:styles)",
    "application": "npm run build & npm run server",
    "development": "npm run watch & npm run server:watch",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:fix": "npm run lint:scripts:fix && npm run lint:styles && npm run lint:styles:sort:fix",
    "lint:scripts": "eslint --ignore-path .gitignore src",
    "lint:scripts:fix": "eslint --ignore-path .gitignore --fix src",
    "lint:styles": "stylelint --config .stylelintrc client/**/*.css",
    "lint:styles:sort:fix": "postcss --use postcss-sorting -r client/**/*.css"
  },
  "dependencies": {
    "autoprefixer": "^6.5.3",
    "babel-cli": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "body-parser": "^1.15.2",
    "browser-sync": "^2.18.2",
    "browserify": "^13.1.1",
    "classnames": "^2.2.5",
    "cookie-parser": "^1.4.3",
    "cookie-session": "^2.0.0-alpha.2",
    "cssnano": "^3.8.1",
    "eslint": "^3.11.1",
    "eslint-config-xo-react": "^0.10.0",
    "eslint-config-xo-space": "^0.15.0",
    "eslint-plugin-jsx-a11y": "^3.0.1",
    "eslint-plugin-react": "^6.8.0",
    "express": "^4.14.0",
    "express-useragent": "^1.0.4",
    "gulp": "^3.9.1",
    "gulp-changed": "^1.3.2",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.2.0",
    "jsx-transform": "^2.3.0",
    "nodemon": "^1.11.0",
    "passport": "^0.3.2",
    "passport-twitter": "^1.0.4",
    "postcss-cli": "^2.6.0",
    "postcss-easy-import": "^1.0.1",
    "postcss-nested": "^1.0.0",
    "postcss-simple-vars": "^3.0.0",
    "postcss-sorting": "^1.7.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "stylelint": "^7.6.0",
    "stylelint-config-standard": "^15.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.7.0"
  }
}
